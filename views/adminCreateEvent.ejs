<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Event - Admin Panel</title>
    <link rel="stylesheet" href="/styles/admin.css">
    <style>
        main {
            align-self: center;
            grid-row: 2/3;
            grid-column: 2/-1;
        }
        .main-content {
            padding: 20px;
            background: var(--bg);
        }
        .form-container {
            max-width: 800px;
            margin: 0 auto;
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 2px 20px rgba(0,0,0,0.1);
        }
        .form-container h1 {
            color: var(--font-black);
            font-size: 2.4rem;
            margin-bottom: 30px;
            text-align: center;
        }
        .form-group {
            margin-bottom: 20px;
        }
        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color: #333;
        }
        .form-group input,
        .form-group textarea,
        .form-group select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 14px;
        }
        .form-group textarea {
            height: 100px;
            resize: vertical;
        }
        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
        }
        .btn-submit {
            background: #4CAF50;
            color: white;
            padding: 12px 30px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            margin-right: 10px;
        }
        .btn-cancel {
            background: #666;
            color: white;
            padding: 12px 30px;
            text-decoration: none;
            border-radius: 5px;
            font-size: 16px;
        }
        .coordinator-item {
            background: #f5f5f5;
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 10px;
        }
        .btn-add-coordinator {
            background: #2196F3;
            color: white;
            padding: 8px 15px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
            margin-bottom: 10px;
        }
        .btn-remove {
            background: #f44336;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
    </style>
</head>
<body>
    <!-- Header -->
    <%- include('partials/adminHeader') %>
    
    <!-- Admin Sidebar -->
    <%- include('partials/adminSidebar') %>
    
    <main>
        <div class="main-content">
            <div class="form-container">
                <h1>Create New Event</h1>
                
                <form id="eventForm" enctype="multipart/form-data">
            <div class="form-group">
                <label for="title">Event Title *</label>
                <input type="text" id="title" name="title" required>
            </div>

            <div class="form-group">
                <label for="description">Description *</label>
                <textarea id="description" name="description" required placeholder="Describe the event..."></textarea>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="date">Event Date *</label>
                    <input type="date" id="date" name="date" required>
                </div>
                <div class="form-group">
                    <label for="time">Event Time *</label>
                    <input type="time" id="time" name="time" required>
                </div>
            </div>

            <div class="form-group">
                <label for="venue">Venue *</label>
                <input type="text" id="venue" name="venue" required placeholder="Event location">
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="category">Category</label>
                    <select id="category" name="category">
                        <option value="Technical">Technical</option>
                        <option value="Cultural">Cultural</option>
                        <option value="Sports">Sports</option>
                        <option value="Workshop">Workshop</option>
                        <option value="Seminar">Seminar</option>
                        <option value="Competition">Competition</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="capacity">Capacity</label>
                    <input type="number" id="capacity" name="capacity" min="1" placeholder="Maximum participants">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="registrationDeadline">Registration Deadline *</label>
                    <input type="datetime-local" id="registrationDeadline" name="registrationDeadline" required>
                </div>
                <div class="form-group">
                    <label for="entryFee">Entry Fee (â‚¹)</label>
                    <input type="number" id="entryFee" name="entryFee" min="0" value="0">
                </div>
            </div>

            <div class="form-group">
                <label for="requirements">Requirements</label>
                <textarea id="requirements" name="requirements" placeholder="Any requirements for participation..."></textarea>
            </div>

            <div class="form-group">
                <label for="prizes">Prizes</label>
                <textarea id="prizes" name="prizes" placeholder="Prize information..."></textarea>
            </div>

            <div class="form-group">
                <label for="eventImage">Event Poster</label>
                <input type="file" id="eventImage" name="eventImage" accept="image/*">
            </div>

            <div class="form-group">
                <label>Event Coordinators</label>
                <button type="button" class="btn-add-coordinator" onclick="addCoordinator()">Add Coordinator</button>
                <div id="coordinators-container">
                    <!-- Coordinators will be added here -->
                </div>
            </div>

            <div style="margin-top: 30px;">
                <button type="submit" class="btn-submit">Create Event</button>
                <a href="/admin/events" class="btn-cancel">Cancel</a>
            </div>
        </form>
    </div>

    <script>
        let coordinatorCount = 0;

        function addCoordinator() {
            coordinatorCount++;
            const container = document.getElementById('coordinators-container');
            const coordinatorDiv = document.createElement('div');
            coordinatorDiv.className = 'coordinator-item';
            coordinatorDiv.innerHTML = `
                <button type="button" class="btn-remove" onclick="removeCoordinator(this)">Remove</button>
                <div class="form-row">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" name="coordinators[${coordinatorCount}][name]" placeholder="Coordinator name">
                    </div>
                    <div class="form-group">
                        <label>Phone</label>
                        <input type="tel" name="coordinators[${coordinatorCount}][phone]" placeholder="Phone number">
                    </div>
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" name="coordinators[${coordinatorCount}][email]" placeholder="Email address">
                </div>
            `;
            container.appendChild(coordinatorDiv);
        }

        function removeCoordinator(button) {
            button.parentElement.remove();
        }

        // Add one coordinator by default
        addCoordinator();

        document.getElementById('eventForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Collect form data as JSON object
            const formData = new FormData(this);
            const eventData = {};
            
            // Convert FormData to regular object
            for (let [key, value] of formData.entries()) {
                eventData[key] = value;
            }
            
            // Handle coordinators as array (if needed)
            if (eventData.coordinators) {
                try {
                    eventData.coordinators = JSON.parse(eventData.coordinators);
                } catch (e) {
                    eventData.coordinators = [{ name: eventData.coordinators, email: '', phone: '' }];
                }
            }
            
            fetch('/admin/events', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Accept': 'application/json'
                },
                body: JSON.stringify(eventData)
            })
            .then(response => response.json())
            .then(data => {
                if (data.status === 'Success') {
                    alert('Event created successfully!');
                    window.location.href = '/admin/events';
                } else {
                    alert('Error: ' + (data.message || data.error || data.details));
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error creating event');
            });
        });

        // Set minimum date to today
        document.getElementById('date').min = new Date().toISOString().split('T')[0];
        document.getElementById('registrationDeadline').min = new Date().toISOString().slice(0, 16);
    </script>
    </div>
    </main>
    <script
      type="module"
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"
    ></script>
    <script
      nomodule
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"
    ></script>
</body>
</html>
