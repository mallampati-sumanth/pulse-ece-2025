<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,800;1,300&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles/profile.css" />
    <link
      rel="shortcut icon"
      href="./../imgs/favicon.ico"
      type="image/x-icon"
    />
    <link rel="apple-touch-icon" href="./../imgs/apple-touch-icon.png" />
    <link rel="manifest" href="./../imgs/site.webmanifest" />
    <title>Pulse</title>
  </head>
  <body>
    <!-------------------------------------------------------------------------------->
    <div class="navbar">
      <span></span>

      <div class="pulse_logo">
        <a href="/faculty">
          <img src="./../imgs/pulse-logo.png" alt="" />
        </a>
      </div>
      <div class="nav_menu">
        <ul class="nav_items">
          <li class="nav-item"><a href="/faculty">Home</a></li>
          <li class="nav-item"><a href="/faculty/clubs">Clubs</a></li>
          <li class="nav-item"><a href="/faculty/events">Events</a></li>
          <li class="nav-item"><a href="/faculty/blood">Blood</a></li>
          <% if(typeof user === 'undefined' || !user) {%>
          <li class="nav-item"><a href="/faculty/signin">Sign in</a></li>
          <li class="nav-item"><a href="/faculty/signup">Sign up</a></li>
          <%}%> <% if(typeof user !== 'undefined' && user) {%>
          <li class="nav-item"><a href="/faculty/profile">Profile</a></li>
          <li class="nav-item"><a href="/faculty/logout">Logout</a></li>

          <%}%>
          <li>
            <ul class="socialmedia-icon">
              <li class="socialmedia_icons">
                <a href="#">
                  <ion-icon name="logo-instagram"></ion-icon>
                </a>
              </li>
              <li class="socialmedia_icons">
                <a href="#">
                  <ion-icon name="logo-facebook"></ion-icon>
                </a>
              </li>
              <li class="socialmedia_icons">
                <a href="#">
                  <ion-icon name="logo-linkedin"></ion-icon>
                </a>
              </li>
              <li class="socialmedia_icons">
                <a href="#">
                  <ion-icon name="logo-twitter"></ion-icon>
                </a>
              </li>
            </ul>
          </li>
        </ul>
      </div>
      <div class="menu-btn">
        <div class="menu-btn-burger"></div>
      </div>
    </div>
    <!-------------------------------------------------------------------------------->
    <section class="profile_section">
      <div class="alert-msg">
        <span> <ion-icon name="warning-outline"></ion-icon> </span>
        <span>error occurs</span>
      </div>
      <div class="alert-msg-success">
        <span> <ion-icon name="checkmark-done-outline"></ion-icon> </span>
        <span>error occurs</span>
      </div>
      <div class="profile">
        <div class="profile_title">
          <h2>Profile</h2>
        </div>
        <div class="profile_container">
          <div class="profile_img">
            <img src="<%= user.img %>" alt="user profile" class="userImg" />
          </div>
          <div class="profile_details">
            <!------------------------------------------>
            <div class="profile_detail profile_name">
              <label for="">Name</label>
              <h2><%= user.name %></h2>
            </div>
            <!------------------------------------------>
            <!------------------------------------------>
            <div class="profile_detail profile_mail">
              <label for="">Email</label>
              <h2><%= user.email %></h2>
            </div>
            <!------------------------------------------>
            <!------------------------------------------>
            <div class="profile_detail profile_id">
              <label for="">Mobile no</label>
              <h2><%= user.phone %></h2>
            </div>
            <!------------------------------------------>

            <!------------------------------------------>
            <div class="profile_detail profile_edit-btn">
              <button class="edit_btn">Edit profile</button>
            </div>
            <!------------------------------------------>
          </div>
        </div>
      </div>
      <div class="edit_profile">
        <button class="close_btn">
          <ion-icon name="close-outline"></ion-icon>
        </button>
        <form
          action="/faculty/profile"
          method="post"
          class="edit_form"
          enctype="multipart/form-data"
        >
          <input type="hidden" name="_method" value="POST" />

          <div class="profile_img">
            <img
              src="<%= user.img %>"
              alt="user profile"
              class="userImg-update"
            />
            <label for="image" class="image-label">
              <span><ion-icon name="create-outline"></ion-icon></span>
            </label>
            <input
              type="file"
              name="image"
              id="image"
              value="<%= user.img %>"
            />
          </div>
          <div class="input_control">
            <input
              required
              type="text"
              name="name"
              id="name"
              placeholder="Full name"
              minlength="4"
              value="<%= user.name %>"
            />
          </div>
          <div class="input_control">
            <input
              required
              type="email"
              name="email"
              id="email"
              placeholder="Email address"
              value="<%= user.email %>"
              disabled
            />
          </div>
          <div class="input_control">
            <input
              required
              type="text"
              name="phone"
              id="phone"
              placeholder="Mobile no"
              minlength="10"
              maxlength="10"
              value="<%= user.phone %>"
            />
          </div>

          <div class="input_control save-btn">
            <button class="save_btn">Save</button>
          </div>
        </form>
      </div>
    </section>
    <script
      type="module"
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"
    ></script>
    <script
      nomodule
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"
    ></script>
    <script src="/scripts/facultyProfile.js"></script>
  </body>
</html>
