              <button class="filter-btn">Filter</button>
            </div>
          </div>
        </form>
        <div class="table_container">
          <table>
            <thead>
              <tr>
                <th>S.no</th>
                <th>Name</th>
                <th>Branch</th>
                <th>Description</th>
                <th>Phone</th>
                <th>Operations</th>
              </tr>
            </thead>
            <tbody>
              <% users.forEach((user,i) =>{%>
              <tr>
                <td><%= i+1 %></td>
                <td><%= user.name %></td>
                <td><%= user.branch %></td>
                <td><%= user.role %></td>
                <td><%= user.phone %></td>
                <td>
                  <div class="operations">
                    <div class="edit">
                      <a href="/admin/user/<%= user._id %>">View</a>
                    </div>
                    <div class="edit">
                      <a href="/admin/user/edit/<%= user._id %>">Edit</a>
                    </div>
                    <div>
                      <form
                        action="/admin/user/delete/<%= user.id %>?_method=DELETE"
                        method="post"
                      >
                        <input type="hidden" name="_method" value="DELETE" />

                        <button class="delete">Delete</button>
                      </form>
                    </div>
                  </div>
                </td>
              </tr>
              <% })%>
            </tbody>
          </table>
        </div>
      </div>
    </main>
    <script
      type="module"
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"
    ></script>
