<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>User Management - Pulse ECE Admin</title>
    <link rel="stylesheet" href="/styles/admin.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Mobile Toggle Button -->
    <button class="toggle-btn">
        <ion-icon name="menu-outline"></ion-icon>
    </button>

    <!-- Header -->
    <%- include('partials/adminHeader') %>
    
    <!-- Admin Sidebar -->
    <%- include('partials/adminSidebar') %>
    
    <main>
        <div class="admin-header">
            <h1>User Management</h1>
            <div class="admin-actions">
                <a href="/admin/users/create/Student" class="btn-admin btn-primary">
                    <ion-icon name="person-add-outline"></ion-icon>
                    Add New Student
                </a>
            </div>
        </div>

        <div class="admin-content">
            <% if (users && users.length > 0) { %>
                <div class="admin-table">
                    <table>
                        <thead>
                            <tr>
                                <th>Profile</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Batch/Department</th>
                                <th>Phone</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach(user => { %>
                                <tr>
                                    <td data-label="Profile">
                                        <div class="user-avatar">
                                            <% if (user.photo) { %>
                                                <img src="/uploads/<%= user.photo %>" alt="<%= user.name %>">
                                            <% } else { %>
                                                <div class="avatar-placeholder">
                                                    <%= user.name.charAt(0).toUpperCase() %>
                                                </div>
                                            <% } %>
                                        </div>
                                    </td>
                                    <td data-label="Name"><%= user.name %></td>
                                    <td data-label="Email"><%= user.email %></td>
                                    <td data-label="Role">
                                        <span class="role-badge <%= user.role %>">
                                            <%= user.role.charAt(0).toUpperCase() + user.role.slice(1) %>
                                        </span>
                                    </td>
                                    <td data-label="Batch/Department">
                                        <%= user.batch || user.department || 'N/A' %>
                                    </td>
                                    <td data-label="Phone"><%= user.phone %></td>
                                    <td data-label="Status">
                                        <span class="status-badge <%= user.isActive ? 'status-active' : 'status-inactive' %>">
                                            <%= user.isActive ? 'Active' : 'Inactive' %>
                                        </span>
                                    </td>
                                    <td data-label="Actions">
                                        <div class="operations">
                                            <a href="/admin/users/<%= user._id %>/edit" class="btn-admin btn-warning">
                                                <ion-icon name="create-outline"></ion-icon>
                                                Edit
                                            </a>
                                            <% if (user.isActive) { %>
                                                <form method="POST" action="/admin/users/<%= user._id %>/deactivate" style="display: inline;">
                                                    <button type="submit" class="btn-admin btn-danger" onclick="return confirm('Are you sure you want to deactivate this user?')">
                                                        <ion-icon name="ban-outline"></ion-icon>
                                                        Deactivate
                                                    </button>
                                                </form>
                                            <% } else { %>
                                                <form method="POST" action="/admin/users/<%= user._id %>/activate" style="display: inline;">
                                                    <button type="submit" class="btn-admin btn-success" onclick="return confirm('Are you sure you want to activate this user?')">
                                                        <ion-icon name="checkmark-circle-outline"></ion-icon>
                                                        Activate
                                                    </button>
                                                </form>
                                            <% } %>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="empty-state">
                    <ion-icon name="people-outline"></ion-icon>
                    <h3>No Users Found</h3>
                    <p>Start by adding your first user to the system.</p>
                    <a href="/admin/users/create/Student" class="btn-admin btn-primary">Add First User</a>
                </div>
            <% } %>
        </div>
    </main>

    <!-- Scripts -->
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <script>
        // Mobile menu toggle
        const toggle_btn = document.querySelector('.toggle-btn');
        const aside_container = document.querySelector('.aside_container');
        
        if (toggle_btn && aside_container) {
            toggle_btn.addEventListener('click', () => {
                aside_container.classList.toggle('active');
            });
        }
    </script>
</body>
</html>
