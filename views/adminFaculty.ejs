<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Faculty - Pulse ECE</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,800;1,300&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles/admin.css" />
    <style>
        main {
            align-self: center;
            grid-row: 2/3;
            grid-column: 2/-1;
        }
        .main-content {
            padding: 20px;
            background: var(--bg);
        }
        .page-header {
            margin-bottom: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 15px;
        }
        .page-header h1 {
            color: var(--font-black);
            font-size: 2.4rem;
            margin: 0;
        }
        .btn-primary {
            background: var(--primary);
            color: white;
            padding: 12px 24px;
            border: none;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            transition: background 0.3s;
        }
        .btn-primary:hover {
            background: #238b3f;
        }
    </style>
  </head>
  <body>
    <!-- Header -->
    <%- include('partials/adminHeader') %>
    
    <!-- Admin Sidebar -->
    <%- include('partials/adminSidebar') %>
    
    <main>
      <div class="main-content">
        <div class="page-header">
          <h1>Faculty Management</h1>
          <a href="/admin/users/create/Faculty" class="btn-primary">+ Add New Faculty</a>
        </div>
        </div>
        <form action="/admin/faculty" method="get">
          <div class="form_sort">
            <h3>Filter by</h3>
            <div class="input_control">
              <input type="email" name="email" id="email" placeholder="Email" />
            </div>
            <!-- <div class="input_control">
              <select name="branch" id="branch">
                <option value="">Select branch</option>
                <option value="ECE">ECE</option>
                <option value="CSE">CSE</option>
                <option value="IOT">IOT</option>
                <option value="CSIT">CSIT</option>
                <option value="AIDS">AIDS</option>
                <option value="MECH">MECH</option>
                <option value="CIVIL">CIVIL</option>
                <option value="EEE">EEE</option>
                <option value="BBE">BBE</option>
              </select>
            </div> -->
            <!-- <div class="input_control">
              <select name="description" id="branch">
                <option value="">Select description</option>
                <option value="student">Student</option>
                <option value="faculty">Faculty</option>
              </select>
            </div> -->
            <div class="input_control input_control-btn">
              <button class="filter-btn">Filter</button>
            </div>
          </div>
        </form>
        <div class="table_container">
          <table>
            <thead>
              <tr>
                <th>S.no</th>
                <th>Name</th>
                <th>Description</th>
                <th>Phone</th>
                <th>Operations</th>
              </tr>
            </thead>
            <tbody>
              <% users.forEach((user,i) =>{%>
              <tr>
                <td><%= i+1 %></td>
                <td><%= user.name %></td>
                <td><%= user.role %></td>
                <td><%= user.phone %></td>
                <td>
                  <div class="operations">
                    <div class="edit">
                      <a href="/admin/faculty/edit/<%= user._id %>">Edit</a>
                    </div>
                    <div>
                      <form
                        action="/admin/faculty/delete/<%= user.id %>?_method=DELETE"
                        method="post"
                      >
                        <input type="hidden" name="_method" value="DELETE" />

                        <button class="delete">Delete</button>
                      </form>
                    </div>
                  </div>
                </td>
              </tr>
              <% })%>
            </tbody>
          </table>
        </div>
      </div>
    </main>
    <script
      type="module"
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"
    ></script>
    <script
      nomodule
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"
    ></script>
  </body>
</html>
