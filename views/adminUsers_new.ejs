<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management - Pulse ECE Admin</title>
    <link rel="stylesheet" href="/styles/admin.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Mobile Toggle Button -->
    <button class="toggle-btn">
        <ion-icon name="menu-outline"></ion-icon>
    </button>

    <!-- Header -->
    <%- include('partials/adminHeader') %>
    
    <!-- Admin Sidebar -->
    <%- include('partials/adminSidebar') %>
    
    <main>
        <div class="admin-header">
            <h1>User Management</h1>
            <div class="admin-actions">
                <a href="/admin/users/create/faculty" class="btn-admin btn-success">
                    <ion-icon name="school-outline"></ion-icon>
                    Add Faculty
                </a>
                <a href="/admin/users/create/student" class="btn-admin btn-primary">
                    <ion-icon name="person-add-outline"></ion-icon>
                    Add Student
                </a>
            </div>
        </div>

        <div class="admin-content">
            <!-- Quick Action Cards -->
            <div class="quick-actions">
                <div class="action-card">
                    <div class="card-icon">
                        <ion-icon name="school-outline"></ion-icon>
                    </div>
                    <div class="card-content">
                        <h3>Add Faculty</h3>
                        <p>Create new faculty accounts with administrative privileges</p>
                        <a href="/admin/users/create/faculty" class="card-btn">
                            <ion-icon name="add-circle-outline"></ion-icon>
                            Add Faculty Member
                        </a>
                    </div>
                </div>
                
                <div class="action-card">
                    <div class="card-icon">
                        <ion-icon name="people-outline"></ion-icon>
                    </div>
                    <div class="card-content">
                        <h3>Add Student</h3>
                        <p>Register new students to the Pulse ECE platform</p>
                        <a href="/admin/users/create/student" class="card-btn">
                            <ion-icon name="add-circle-outline"></ion-icon>
                            Add Student
                        </a>
                    </div>
                </div>
            </div>

            <!-- Filters -->
            <div class="filters-section">
                <form action="/admin/users" method="get" class="filters-form">
                    <div class="filter-group">
                        <label for="role">Filter by Role:</label>
                        <select name="role" id="role">
                            <option value="">All Roles</option>
                            <option value="student" <%= filters && filters.role === 'student' ? 'selected' : '' %>>Students</option>
                            <option value="faculty" <%= filters && filters.role === 'faculty' ? 'selected' : '' %>>Faculty</option>
                        </select>
                    </div>
                    <div class="filter-group">
                        <label for="branch">Filter by Branch:</label>
                        <select name="branch" id="branch">
                            <option value="">All Branches</option>
                            <option value="ECE" <%= filters && filters.branch === 'ECE' ? 'selected' : '' %>>ECE</option>
                            <option value="CSE" <%= filters && filters.branch === 'CSE' ? 'selected' : '' %>>CSE</option>
                            <option value="IOT" <%= filters && filters.branch === 'IOT' ? 'selected' : '' %>>IOT</option>
                            <option value="CSIT" <%= filters && filters.branch === 'CSIT' ? 'selected' : '' %>>CSIT</option>
                            <option value="AIDS" <%= filters && filters.branch === 'AIDS' ? 'selected' : '' %>>AIDS</option>
                            <option value="MECH" <%= filters && filters.branch === 'MECH' ? 'selected' : '' %>>MECH</option>
                            <option value="CIVIL" <%= filters && filters.branch === 'CIVIL' ? 'selected' : '' %>>CIVIL</option>
                            <option value="EEE" <%= filters && filters.branch === 'EEE' ? 'selected' : '' %>>EEE</option>
                        </select>
                    </div>
                    <div class="filter-group">
                        <label for="email">Search by Email:</label>
                        <input type="email" name="email" id="email" placeholder="Enter email address" value="<%= filters && filters.email ? filters.email : '' %>">
                    </div>
                    <button type="submit" class="btn-admin btn-secondary">
                        <ion-icon name="search-outline"></ion-icon>
                        Apply Filters
                    </button>
                    <a href="/admin/users" class="btn-admin btn-light">
                        <ion-icon name="refresh-outline"></ion-icon>
                        Clear
                    </a>
                </form>
            </div>

            <!-- Users Table -->
            <% if (users && users.length > 0) { %>
                <div class="admin-table">
                    <table>
                        <thead>
                            <tr>
                                <th>Profile</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Branch/Department</th>
                                <th>Phone</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach((user, index) => { %>
                                <tr>
                                    <td data-label="Profile">
                                        <div class="user-profile">
                                            <% if (user.photo) { %>
                                                <img src="/uploads/<%= user.photo %>" alt="<%= user.name %>" class="user-avatar">
                                            <% } else { %>
                                                <div class="avatar-placeholder">
                                                    <%= user.name.charAt(0).toUpperCase() %>
                                                </div>
                                            <% } %>
                                        </div>
                                    </td>
                                    <td data-label="Name"><%= user.name %></td>
                                    <td data-label="Email"><%= user.email %></td>
                                    <td data-label="Role">
                                        <span class="role-badge <%= user.role %>">
                                            <%= user.role.charAt(0).toUpperCase() + user.role.slice(1) %>
                                        </span>
                                    </td>
                                    <td data-label="Branch/Department">
                                        <%= user.branch || user.department || 'N/A' %>
                                    </td>
                                    <td data-label="Phone"><%= user.phone || 'N/A' %></td>
                                    <td data-label="Status">
                                        <span class="status-badge <%= user.isActive ? 'status-active' : 'status-inactive' %>">
                                            <%= user.isActive ? 'Active' : 'Inactive' %>
                                        </span>
                                    </td>
                                    <td data-label="Actions">
                                        <div class="operations">
                                            <a href="/admin/user/<%= user._id %>" class="btn-admin btn-info">
                                                <ion-icon name="eye-outline"></ion-icon>
                                                View
                                            </a>
                                            <a href="/admin/user/edit/<%= user._id %>" class="btn-admin btn-warning">
                                                <ion-icon name="create-outline"></ion-icon>
                                                Edit
                                            </a>
                                            <form method="POST" action="/admin/user/delete/<%= user._id %>?_method=DELETE" style="display: inline;">
                                                <input type="hidden" name="_method" value="DELETE">
                                                <button type="submit" class="btn-admin btn-danger" onclick="return confirm('Are you sure you want to delete this user?')">
                                                    <ion-icon name="trash-outline"></ion-icon>
                                                    Delete
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="empty-state">
                    <ion-icon name="people-outline"></ion-icon>
                    <h3>No Users Found</h3>
                    <p>No users match your current filters. Try adjusting your search criteria.</p>
                    <a href="/admin/users/create/student" class="btn-admin btn-primary">Create First User</a>
                </div>
            <% } %>
        </div>
    </main>

    <!-- Scripts -->
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <script>
        // Mobile menu toggle
        const toggle_btn = document.querySelector('.toggle-btn');
        const aside_container = document.querySelector('.aside_container');
        
        if (toggle_btn && aside_container) {
            toggle_btn.addEventListener('click', () => {
                aside_container.classList.toggle('active');
            });
        }
    </script>
</body>
</html>
