<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Event Registrations - Admin Panel</title>
    <link rel="stylesheet" href="/styles/admin.css">
    <style>
        .main-content {
            padding: 20px;
            background: var(--bg);
        }
        .page-header {
            margin-bottom: 30px;
        }
        .page-header h1 {
            color: var(--font-black);
            font-size: 2.4rem;
            margin-bottom: 10px;
        }
        .registrations-table {
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            margin-bottom: 30px;
        }
        .table-header {
            background: #f8f9fa;
            padding: 20px;
            border-bottom: 1px solid #ddd;
        }
        .table-header h2 {
            margin: 0;
            color: var(--font-black);
            font-size: 1.8rem;
        }
        .table-container {
            overflow-x: auto;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            min-width: 800px;
        }
        th, td {
            padding: 15px 12px;
            text-align: left;
            border-bottom: 1px solid #eee;
        }
        th {
            background: #f8f9fa;
            font-weight: bold;
            color: var(--font-black);
            font-size: 1.4rem;
        }
        td {
            font-size: 1.3rem;
        }
        .status-badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 1.1rem;
            font-weight: bold;
            text-transform: uppercase;
        }
        .status-registered {
            background: #d4edda;
            color: #155724;
        }
        .status-cancelled {
            background: #f8d7da;
            color: #721c24;
        }
        .user-link {
            color: #007bff;
            text-decoration: none;
            font-weight: 500;
        }
        .user-link:hover {
            text-decoration: underline;
        }
        .empty-state {
            padding: 60px 20px;
            text-align: center;
            color: #666;
        }
        .empty-state h3 {
            margin-bottom: 15px;
            font-size: 1.8rem;
        }

        /* Mobile Responsive */
        @media (max-width: 768px) {
            table {
                min-width: 600px;
            }
            th, td {
                padding: 10px 8px;
                font-size: 1.2rem;
            }
            th {
                font-size: 1.3rem;
            }
        }
        
        /* Ensure proper admin layout */
        main {
            align-self: center;
            grid-row: 2/3;
            grid-column: 2/-1;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <%- include('partials/adminHeader') %>

    <!-- Admin Sidebar -->
    <%- include('partials/adminSidebar') %>
    
    <main>
      <div class="main-content">
        <div class="page-header">
          <h1>Event Registrations Management</h1>
        </div>
        
        <!-- Registrations Table -->
        <div class="registrations-table">
            <div class="table-header">
                <h2>Event Registrations (<%= registrations.length %> total)</h2>
            </div>
            
            <% if (registrations.length > 0) { %>
                <table>
                    <thead>
                        <tr>
                            <th>Student</th>
                            <th>Email</th>
                            <th>Event</th>
                            <th>Registration Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% registrations.forEach(registration => { %>
                            <tr>
                                <td>
                                    <a href="/admin/user/<%= registration.user._id %>" class="user-link">
                                        <%= registration.user.name %>
                                    </a>
                                    <br>
                                    <small><%= registration.user.batch %> - <%= registration.user.branch %></small>
                                </td>
                                <td><%= registration.user.email %></td>
                                <td>
                                    <% if (registration.event) { %>
                                        <%= registration.event.title %>
                                        <br>
                                        <small><%= new Date(registration.event.date).toLocaleDateString() %></small>
                                    <% } else { %>
                                        <span style="color: #999; font-style: italic;">Event Deleted</span>
                                    <% } %>
                                </td>
                                <td><%= new Date(registration.registrationDate).toLocaleDateString() %></td>
                                <td>
                                    <span class="status-badge status-<%= registration.status.toLowerCase() %>">
                                        <%= registration.status %>
                                    </span>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } else { %>
                <div style="padding: 40px; text-align: center; color: #666;">
                    <h3>No registrations found</h3>
                    <p>No event registrations found in the database.</p>
                </div>
            <% } %>
        </div>
      </div>
    </main>

    <!-- Scripts -->
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <script>
      // Mobile menu toggle
      const toggle_btn = document.querySelector('.toggle-btn');
      const aside_bar = document.querySelector('.aside_bar');
      
      if (toggle_btn) {
        toggle_btn.addEventListener('click', () => {
          aside_bar.classList.toggle('active');
        });
      }
    </script>
</body>
</html>
