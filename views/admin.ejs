<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Pulse ECE</title>
    <link rel="stylesheet" href="/styles/admin.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Mobile Toggle Button -->
    <button class="toggle-btn">
        <ion-icon name="menu-outline"></ion-icon>
    </button>

    <!-- Header -->
    <%- include('partials/adminHeader') %>
    
    <!-- Admin Sidebar -->
    <%- include('partials/adminSidebar') %>
    
    <main>
        <!-- Welcome Section -->
        <div class="welcome-section">
            <h1>Welcome to Admin Dashboard</h1>
            <p>Manage your ECE department efficiently with comprehensive tools and insights</p>
            <p class="credit-text">CREATED & REWORKED BY MALLAMPATI SUMANTH</p>
        </div>

        <!-- Dashboard Statistics -->
        <div class="dashboard-grid">
            <div class="dashboard-card card-users">
                <div class="card-header">
                    <div class="card-title">Total Students</div>
                    <div class="card-icon">
                        <ion-icon name="people-outline"></ion-icon>
                    </div>
                </div>
                <div class="card-value"><%= dashboardData.totalUsers %></div>
                <div class="card-subtitle">Registered students</div>
            </div>

            <div class="dashboard-card card-faculty">
                <div class="card-header">
                    <div class="card-title">Faculty Members</div>
                    <div class="card-icon">
                        <ion-icon name="school-outline"></ion-icon>
                    </div>
                </div>
                <div class="card-value"><%= dashboardData.totalFaculty %></div>
                <div class="card-subtitle">Active faculty</div>
            </div>

            <div class="dashboard-card card-events">
                <div class="card-header">
                    <div class="card-title">Total Events</div>
                    <div class="card-icon">
                        <ion-icon name="calendar-outline"></ion-icon>
                    </div>
                </div>
                <div class="card-value"><%= dashboardData.totalEvents %></div>
                <div class="card-subtitle">Events created</div>
            </div>

            <div class="dashboard-card card-registrations">
                <div class="card-header">
                    <div class="card-title">Event Registrations</div>
                    <div class="card-icon">
                        <ion-icon name="ticket-outline"></ion-icon>
                    </div>
                </div>
                <div class="card-value"><%= dashboardData.totalRegistrations %></div>
                <div class="card-subtitle">Total registrations</div>
            </div>

            <div class="dashboard-card card-pulse">
                <div class="card-header">
                    <div class="card-title">Pulse Members</div>
                    <div class="card-icon">
                        <ion-icon name="heart-outline"></ion-icon>
                    </div>
                </div>
                <div class="card-value"><%= dashboardData.totalPulseMembers %></div>
                <div class="card-subtitle">Club members</div>
            </div>

            <div class="dashboard-card card-blood">
                <div class="card-header">
                    <div class="card-title">Blood Donors</div>
                    <div class="card-icon">
                        <ion-icon name="water-outline"></ion-icon>
                    </div>
                </div>
                <div class="card-value"><%= dashboardData.totalBloodDonors %></div>
                <div class="card-subtitle">Registered donors</div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="quick-actions">
            <a href="/admin/events/create" class="quick-action">
                <ion-icon name="add-circle-outline"></ion-icon>
                <h3>Create Event</h3>
            </a>
            <a href="/admin/users/create/Student" class="quick-action">
                <ion-icon name="person-add-outline"></ion-icon>
                <h3>Add Student</h3>
            </a>
            <a href="/admin/users/create/Faculty" class="quick-action">
                <ion-icon name="library-outline"></ion-icon>
                <h3>Add Faculty</h3>
            </a>
            <a href="/admin/event-registrations" class="quick-action">
                <ion-icon name="list-outline"></ion-icon>
                <h3>View Registrations</h3>
            </a>
        </div>
    </main>

    <!-- Scripts -->
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <script>
        // Mobile menu toggle
        const toggle_btn = document.querySelector('.toggle-btn');
        const aside_container = document.querySelector('.aside_container');
        
        if (toggle_btn && aside_container) {
            toggle_btn.addEventListener('click', () => {
                aside_container.classList.toggle('active');
            });
        }
    </script>
</body>
</html>
